<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hasse.s.sire_simplereader">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:fullBackupContent="@xml/mybackupscheme">
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PDFActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".EpubActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".TxtActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".CSVActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".DocxActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".SettingsActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".HtmlActivity" android:theme="@style/AppTheme"/>
    </application>

</manifest>